        <attr name="errorText" format="string" />
        <attr name="loadingText" format="string" />
        <attr name="progressBarColor" format="reference|color" />
        <attr name="tryButtonColor" format="reference|color" />
        <attr name="loadingImage" format="reference" />
        <attr name="errorImage" format="reference" />
        <attr name="has_try_again" format="boolean" />
        <attr name="custom_try_again" format="reference" />
        <attr name="custom_load" format="reference" />
        <attr name="custom_error" format="reference" />
